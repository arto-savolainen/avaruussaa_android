<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Avaruussää" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimaryDark">@color/transparent_dark_purple</item> // Color of the top system bar
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textColorSecondary">@color/faded_purple</item>
        <item name="android:textColorTertiary">@color/primary_dark</item>
        <item name="textAppearanceTitleMedium">@style/setting_title</item>
        <item name="textAppearanceBodyMedium">@style/setting_summary</item>
        <item name="android:colorBackground">@color/background</item>
    </style>

    <style name="setting_summary">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="setting_title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="probability_quiet">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_dark</item>
    </style>
    <style name="probability_low">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/aurora_yellow</item>
    </style>
    <style name="probability_high">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/aurora_red</item>
    </style>

    <style name="activity_big" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">100sp</item>
        <item name="android:textColor">@color/activity_blue</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowDy">10</item>
        <item name="android:shadowRadius">10</item>
    </style>
    <style name="error_grey" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="Theme.Avaruussää" parent="Base.Theme.Avaruussää" />
</resources>